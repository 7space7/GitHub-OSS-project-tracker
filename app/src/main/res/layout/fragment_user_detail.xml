<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.ua.viktor.github.fragment.UserDetailFragment">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        app:cardElevation="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >


            <TextView
                android:id="@+id/aboutTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="About"
                android:textColor="@color/colorLine"
                android:textSize="24sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/aboutTextView"
                android:background="@color/colorLine"
                android:id="@+id/view3"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clock_image"
                android:src="@drawable/ic_octicon_clock"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="14dp"
                android:layout_below="@+id/view3"
                android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_image"
                android:src="@drawable/ic_octicon_location"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_below="@+id/clock_image"
                android:layout_alignLeft="@+id/clock_image"
                android:layout_alignStart="@+id/clock_image"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_created_at"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:layout_alignTop="@+id/clock_image"
                android:layout_toRightOf="@+id/aboutTextView"
                android:layout_toEndOf="@+id/aboutTextView"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_location"
                android:visibility="gone"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:layout_alignBottom="@+id/location_image"
                android:layout_alignLeft="@+id/text_created_at"
                android:layout_alignStart="@+id/text_created_at"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mail_image"
                android:src="@drawable/ic_octicon_mail"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:visibility="gone"
                android:layout_below="@+id/location_image"
                android:layout_alignLeft="@+id/location_image"
                android:layout_alignStart="@+id/location_image"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_email"
                android:visibility="gone"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:layout_alignBottom="@+id/mail_image"
                android:layout_alignLeft="@+id/text_location"
                android:layout_alignStart="@+id/text_location"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/link_image"
                android:src="@drawable/ic_octicon_link"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:visibility="gone"
                android:layout_below="@+id/mail_image"
                android:layout_alignLeft="@+id/mail_image"
                android:layout_alignStart="@+id/mail_image"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_blog"
                android:paddingBottom="8dp"
                android:visibility="gone"
                android:textSize="14sp"
                android:layout_alignBottom="@+id/link_image"
                android:layout_alignLeft="@+id/text_email"
                android:layout_alignStart="@+id/text_email"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        app:cardElevation="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
            >


            <TextView
                android:id="@+id/githubTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="Github"
                android:textColor="@color/colorLine"
                android:textSize="24sp"

                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/githubTextView"
                android:background="@color/colorLine"
                android:id="@+id/view2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repo_image"
                android:src="@drawable/ic_repo"
                android:visibility="gone"
                android:layout_below="@+id/githubTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_public_repos"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:layout_alignTop="@+id/repo_image"
                android:layout_toRightOf="@+id/githubTextView"
                android:layout_toEndOf="@+id/githubTextView"
                android:paddingTop="9dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
  </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
